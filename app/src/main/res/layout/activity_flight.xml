<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
tools:context="com.example.tianxie.myapplication.FlightActivity">

    <android.support.constraint.Guideline
        android:id="@+id/flight_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62"/>

    <ImageView
        android:id="@+id/flight_guidearrow"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_trending_flat_black_24dp"
        app:layout_constraintRight_toLeftOf="@+id/flight_guideline"/>

    <TextView
        android:id="@+id/flight_depairport_txt"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        app:layout_constraintRight_toLeftOf="@+id/flight_guidearrow"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_arrairport_txt"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/flight_guideline"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/flight_arrairport_txt"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:text="$111"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_number_txt"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/flight_price_txt"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_dep_date"
        app:layout_constraintTop_toBottomOf="@+id/flight_depairport_txt"
        app:layout_constraintRight_toRightOf="@+id/flight_depairport_txt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/flight_arr_date"
        app:layout_constraintTop_toBottomOf="@+id/flight_depairport_txt"
        app:layout_constraintLeft_toLeftOf="@+id/flight_arrairport_txt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/flight_flight_time"
        app:layout_constraintTop_toBottomOf="@+id/flight_depairport_txt"
        app:layout_constraintRight_toLeftOf="@+id/flight_arr_date"
        app:layout_constraintLeft_toRightOf="@+id/flight_dep_date"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/flight_two_guidearrow"
        app:layout_constraintTop_toBottomOf="@+id/flight_dep_date"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_trending_flat_black_24dp"
        app:layout_constraintRight_toLeftOf="@+id/flight_guideline"/>

    <TextView
        android:id="@+id/flight_two_depairport_txt"
        app:layout_constraintTop_toBottomOf="@+id/flight_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        app:layout_constraintRight_toLeftOf="@+id/flight_two_guidearrow"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_two_arrairport_txt"
        app:layout_constraintTop_toBottomOf="@+id/flight_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/flight_guideline"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_two_price_txt"
        app:layout_constraintTop_toBottomOf="@+id/flight_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/flight_two_arrairport_txt"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_two_number_txt"
        app:layout_constraintTop_toBottomOf="@+id/flight_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/flight_two_price_txt"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_two_dep_date"
        app:layout_constraintTop_toBottomOf="@+id/flight_two_depairport_txt"
        app:layout_constraintRight_toRightOf="@+id/flight_two_depairport_txt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/flight_two_arr_date"
        app:layout_constraintTop_toBottomOf="@+id/flight_two_depairport_txt"
        app:layout_constraintLeft_toLeftOf="@+id/flight_two_arrairport_txt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/flight_two_flight_time"
        app:layout_constraintTop_toBottomOf="@+id/flight_two_depairport_txt"
        app:layout_constraintRight_toLeftOf="@+id/flight_two_arr_date"
        app:layout_constraintLeft_toRightOf="@+id/flight_two_dep_date"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/flight_three_guidearrow"
        app:layout_constraintTop_toBottomOf="@+id/flight_two_dep_date"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_trending_flat_black_24dp"
        app:layout_constraintRight_toLeftOf="@+id/flight_guideline"/>

    <TextView
        android:id="@+id/flight_three_depairport_txt"
        app:layout_constraintTop_toBottomOf="@+id/flight_two_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        app:layout_constraintRight_toLeftOf="@+id/flight_three_guidearrow"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_three_arrairport_txt"
        app:layout_constraintTop_toBottomOf="@+id/flight_two_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/flight_guideline"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_three_price_txt"
        app:layout_constraintTop_toBottomOf="@+id/flight_two_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/flight_three_arrairport_txt"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_three_number_txt"
        app:layout_constraintTop_toBottomOf="@+id/flight_two_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/flight_three_price_txt"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_three_dep_date"
        app:layout_constraintTop_toBottomOf="@+id/flight_three_depairport_txt"
        app:layout_constraintRight_toRightOf="@+id/flight_three_depairport_txt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/flight_three_arr_date"
        app:layout_constraintTop_toBottomOf="@+id/flight_three_depairport_txt"
        app:layout_constraintLeft_toLeftOf="@+id/flight_three_arrairport_txt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/flight_three_flight_time"
        app:layout_constraintTop_toBottomOf="@+id/flight_three_depairport_txt"
        app:layout_constraintRight_toLeftOf="@+id/flight_three_arr_date"
        app:layout_constraintLeft_toRightOf="@+id/flight_three_dep_date"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/flight_four_guidearrow"
        app:layout_constraintTop_toBottomOf="@+id/flight_three_dep_date"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_trending_flat_black_24dp"
        app:layout_constraintRight_toLeftOf="@+id/flight_guideline"/>

    <TextView
        android:id="@+id/flight_four_depairport_txt"
        app:layout_constraintTop_toBottomOf="@+id/flight_three_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        app:layout_constraintRight_toLeftOf="@+id/flight_four_guidearrow"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_four_arrairport_txt"
        app:layout_constraintTop_toBottomOf="@+id/flight_three_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/flight_guideline"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_four_price_txt"
        app:layout_constraintTop_toBottomOf="@+id/flight_three_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/flight_four_arrairport_txt"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_four_number_txt"
        app:layout_constraintTop_toBottomOf="@+id/flight_three_dep_date"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/flight_four_price_txt"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/flight_four_dep_date"
        app:layout_constraintTop_toBottomOf="@+id/flight_four_depairport_txt"
        app:layout_constraintRight_toRightOf="@+id/flight_four_depairport_txt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/flight_four_arr_date"
        app:layout_constraintTop_toBottomOf="@+id/flight_four_depairport_txt"
        app:layout_constraintLeft_toLeftOf="@+id/flight_four_arrairport_txt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/flight_four_flight_time"
        app:layout_constraintTop_toBottomOf="@+id/flight_four_depairport_txt"
        app:layout_constraintRight_toLeftOf="@+id/flight_four_arr_date"
        app:layout_constraintLeft_toRightOf="@+id/flight_four_dep_date"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/flight_book_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E65100"
        android:textColor="#FAFAFA"
        android:layout_marginRight="6dp"
        app:layout_constraintTop_toBottomOf="@+id/flight_four_dep_date"
        app:layout_constraintRight_toLeftOf="@+id/flight_guideline"
        android:text="Book"/>
</android.support.constraint.ConstraintLayout>