<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.tianxie.myapplication.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        android:layout_marginBottom="10dp"
        android:src="@drawable/wpi_engineers_logo"
        app:layout_constraintBottom_toTopOf="@+id/register_edit_test_username" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/register_edit_test_username"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Create an Account"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/register_edit_test_username"
        android:hint="@string/edit_test_username_hint"
        android:inputType="textEmailAddress"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/register_edit_test_password"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent" />
    <EditText
        android:id="@+id/register_edit_test_password"
        android:hint="@string/edit_test_password_hint"
        android:inputType="numberPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/register_button_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:background="#E65100"
        android:textColor="#FAFAFA"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Signup" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

</android.support.constraint.ConstraintLayout>
